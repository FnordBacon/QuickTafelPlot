import os
import matplotlib.pyplot as ploter

def GetFilepathArray(rootDir):
    filepaths = []

    for subdir, dirs, files in os.walk(rootDir):
        for file in files:
            if file.split(".")[1] == "mpt":
                filepaths.append(os.path.join(subdir, file))

    return filepaths

def PlotAndSaveGraph(filepath, ArrayToPlot, xAxisLabel, yAxisLabel):
    ploter.plot(ArrayToPlot)
    ploter.ylabel(yAxisLabel)
    ploter.xlabel(xAxisLabel)


ploter.plot([1,2,3,4])
ploter.ylabel("yo")
ploter.xlabel("foo")
ploter.savefig('foo.png', dpi=600, bbox_inches='tight')
